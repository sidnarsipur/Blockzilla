{
	"manifest_version": 3,
	"name": "Content Blocker",
	"version": "1.0",
	"description": "Blocks content containing specific keywords",
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*",
				"https://*.reddit.com/*",
				"https://*.twitter.com/*"
			],
			"js": ["content.js"]
		}
	]
}
